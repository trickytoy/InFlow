{
    "manifest_version": 3,
    "name": "InFlow",
    "version": "1.0.0",
    "action" : {
      "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "description": "This is the description of your extension",
  "icons": {
    "16": "public/16.png",
    "32": "public/32.png",
    "48": "public/48.png",
    "192": "public/192.png"
  },
    "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["storage", "alarms", "notifications", "scripting", "unlimitedStorage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "type": "module"
    }
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
  {
    "resources": ["models/**"],
    "matches": ["<all_urls>"]
  }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'"
  }

  }
